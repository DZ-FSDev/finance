package com.dz_fs_dev.finance.markets;

import java.util.List;

import com.dz_fs_dev.finance.markets.interfaces.Order;

/**
 * The user of this interface should implement logic to identify from an order
 * book the next best long and short as well as execution logic for matched
 * orders.
 * 
 * @author DZ-FSDev
 * @since 17.0.1
 * @version 0.0.1
 */
public interface IExchangeOrderMatchingStrategy {
	/**
	 * 
	 * 
	 * @param longs
	 * @return
	 */
	public int indexOfNextLong(List<Order> longs);
	
	/**
	 * 
	 * 
	 * @param shorts
	 * @return
	 */
	public int indexOfNextShort(List<Order> shorts);
	
	/**
	 * 
	 * 
	 * @param longOrder
	 * @param shortOrder
	 * @return
	 */
	public boolean executeTrade(Order longOrder, Order shortOrder);
}
